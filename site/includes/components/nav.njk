{# 'sr-only' is toggled off when mobile nav is opened. #}
{# did it this way so mobile sr users don't have to toggle the nav; it's just there. #}
<nav class="sr-only text-brown bg-white font-title absolute top-headerHeight md:static md:not-sr-only md:px-4">

{% set navPages = collections.all | eleventyNavigation %}

{% macro renderNavListItem(entry) -%}

{% set activeClass %}{% if entry.url == page.url %}cmp-active-link{% endif %}{% endset %}

<li class="{{activeClass}} md:border-none">
  <a class="cmp-link block p-6" href="{{ entry.url | url }}">{{ entry.title }}</a>
{# {%- if entry.children.length -%}
  <ul>
    {%- for child in entry.children %}{{ renderNavListItem(child) }}{% endfor -%}
  </ul>
{%- endif -%} #}
</li>
{%- endmacro %}

<ul class="shadow-xl flex flex-col w-screen md:flex-row md:w-auto md:shadow-none">
{%- for entry in navPages %}{{ renderNavListItem(entry) }}{%- endfor -%}
</ul>
</nav>