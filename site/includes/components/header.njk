<header class="w-full relative text-brown bg-transparent relative h-header flex items-center md:px-4 md:justify-between md:shadow-sm">     
  {# Nav is sr-only; sr users to not need this toggle button #}
  <button aria-hidden="true" class="mx-4 fill-current text-brown w-8 h-8 js-nav-toggle md:hidden">
    <span class="js-open-icon inline pointer-events-none">{{ "/site/media/icons/menu.svg"| svgContents | safe }}</span>
    <span class="js-close-icon hidden pointer-events-none">{{ "/site/media/icons/cross.svg"| svgContents | safe }}</span>
  </button>
  <a class="cmp-h2 cmp-link" href="/">{{general.site_title}}</a>   
    {% include "./nav.njk" %}
</header>